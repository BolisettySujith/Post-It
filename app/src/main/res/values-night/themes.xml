<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SocialApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
<!--         <item name="colorPrimary">@color/black</item>-->
        <item name="android:background">@color/black</item>
    </style>
    <style name="Base.Theme.SocialApp.CreatePost" parent="Theme.Material3.Dark">
        <!-- Customize your dark theme here. -->
        <!--         <item name="colorPrimary">@color/black</item>-->
        <item name="android:background">@color/black</item>
    </style>

    <style name="ThemeActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/black</item>
        <!-- Support library compatibility -->
        <item name="background">@color/black</item>
    </style>
    <style name="AlertDialogStyle" parent="Theme.Material3.Dark.Dialog.Alert">
        <!-- Customize the background color to white -->
        <item name="android:background">#1D1D1D</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>

        <!-- Add any other customizations you need for the AlertDialog here -->
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:layout_margin">5dp</item>
    </style>
